<tal:block define="emptybody python:1;">
<metal:block use-macro="here/main_template/macros/master">
<metal:block fill-slot="css_slot">
  <metal:block
    use-macro="here/cpsdocument_edit_form/macros/widgets_javascript" />
</metal:block>

<metal:block fill-slot="body">
<div style="margin: 1em">
<div class="document"
  tal:define="
  res python:here.getCPSNavigation(REQUEST=request);
  batch_info res/listing_batch_info;
  mq nocall:modules/ZTUtils/make_query;">
<div class="box">

<h1>Current Tree</h1>
<div class="description">CPS Navigation</div>

<div class="tabs">
  <a tal:attributes="href python:'%s?%s' % (
    request['URL'], mq(request.form, widget__display_mode='tree', submit=0));
    class python:test(res['display_mode'] == 'tree', 'selected', nothing);"
    >Navigation</a>
  <a tal:attributes="href python:'%s?%s' % (
    request['URL'], mq(request.form, widget__display_mode='search', submit=0));
    class python:test(res['display_mode'] == 'search', 'selected', nothing);"
    >Search</a>
  <a tal:attributes="href python:'%s?%s' % (
    request['URL'], mq(request.form, widget__display_mode='options', submit=0));
    class python:test(res['display_mode'] == 'options', 'selected', nothing);"
    >Options</a>
</div>

<div>
  <span i18n:translate="cpsnav_option_current_uid">here</span>:
  <tal:block repeat="bc python:here.getBreadCrumbs(url=request.form.get('widget__current_uid'))">
    <abbr tal:attributes="title bc/longtitle|nothing;
      accesskey python:test(repeat['bc'].end, nothing, 'U')"
       tal:content="bc/title">
       Title
    </abbr><strong tal:condition="not:repeat/bc/end">&nbsp;&gt;&nbsp;</strong>
  </tal:block>
</div>

<div style="float:left; width: 22em; padding:1em; border-right: 1px solid
#ccc;" tal:condition="python: res['display_mode'] == 'tree'">
  <div class="group">
  <div tal:repeat="node res/tree">
    <metal:block use-macro="here/navigation_lib/macros/render_lines_text" />
    <a tal:attributes="
      class python:test(node['is_current'], 'selected', nothing);
      href python:'%s?%s' % (request['URL'], mq(request.form,
widget__current_uid=node['object']['rpath'], b_start=0));"
      tal:content="node/object/title_or_id" />
  </div>
  </div>
</div>

<div style="float:left; width: 22em; padding:1em; border-right: 1px solid
#ccc;" tal:condition="python: res['display_mode'] == 'search'">
  <div class="group">
    <form action="" method="post">
      <div tal:replace="structure res/rendered_search_form" />
      <div style="display: None"
        tal:content="structure res/rendered_option_form" />
      <div class="row">
        <div class="field">
          <input type="submit" name="submit"
            class="standalone" value="button_search"
            i18n:attributes="value" />
        </div>
      </div>
      <!-- tal:block replace="structure python:opt[1]" / -->
    </form>
  </div>
</div>

<div style="margin-left: 24em; padding: 1em;"
  tal:condition="python: res['display_mode'] != 'options'">
  <div class="message" tal:content="res/status_form"
    tal:condition="res/status_form" />
  <metal:block use-macro="here/navigation_lib/macros/batch_info" />
  <div tal:repeat="item res/listing">
    <span tal:content="item/id" /> (<span tal:content="item/title_or_id" />)
  </div>
  <metal:block use-macro="here/navigation_lib/macros/batch_nav" />
</div>

<div  style="clear: both">&nbsp;</div>

<div class="group"
  tal:condition="python: res['display_mode'] == 'options'">
  <div class="message" tal:content="res/status_form"
    tal:condition="res/status_form" />
    <form action="" method="post">
      <div tal:replace="structure res/rendered_option_form" />
      <div style="display: None"
        tal:content="structure res/rendered_search_form" />
      <div class="row">
        <div class="field">
          <input type="submit"  name="submit"
            class="standalone" value="button_update"
            i18n:attributes="value" />
        </div>
      </div>
    </form>
</div>


</div>
</div>
</div>
</metal:block>
</metal:block>
</tal:block>
