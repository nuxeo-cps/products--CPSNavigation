<!-- item is a brain -->
<metal:block define-macro="popup_item_view">
  <img tal:replace="structure python:here.getImgTag(item['getIcon'],
       base_url=base_url)" />
  <a tal:attributes="title item/Description">
    <strong tal:condition="item/Title"
            tal:content="item/Title" />
    <strong tal:condition="not:item/Title"
            tal:content="item/id" />
  </a>
</metal:block>

<!-- item is a brain input_id is the widget id in parent window -->
<metal:block define-macro="popup_item_edit">
  <input type="hidden"
         tal:attributes="name input_id; value item/relative_path" />
  <em tal:content="item/relative_path" />
</metal:block>
